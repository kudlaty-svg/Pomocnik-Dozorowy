<Window x:Class="Pomocnik_Dozorowy.OknaPomocnicze.OknoPomoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomocnik_Dozorowy.OknaPomocnicze"
        mc:Ignorable="d"
        Height="400" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="False" >
    <Grid Background="#FF1F1F1F">
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="5">
            <TextBlock Text="Test" Foreground="White"/>
        </StackPanel>
        <Border Grid.Row="1" BorderBrush="#FF3D3D3D" BorderThickness="0,1,0,0" />
        <StackPanel Grid.Row="1" Margin="5" Orientation="Horizontal" >
            <TextBlock Text="Kontakt: " Height="90" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" />
            <TextBlock Text="Jeżeli zauważono jakikolwiek błąd, literówkę, problem z jaką kolwiek funkcją w programie. Proszę o pilny kontakt!
                       Email: kudlaty.g4ming@gmail.com" 
                       TextWrapping="Wrap" Height="50" Width="340" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="white" />
        </StackPanel>
        <Button Grid.Row="1" Content="Zamknij" Style="{StaticResource DarkButtonStyle}" Margin="0,0,0,5" Height="30" Width="80" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Btn_Zamknij_Click" />

    </Grid>
</Window>
